<?xml version="1.0"?>
<robot name="eufs" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- ***************** -->
    <!-- Config parameters -->
    <!-- ***************** -->

    <!--  Load the config file  -->
    <xacro:property name="config" value="${load_yaml('$(arg config_file)')}"/>

    <!-- ***************** -->
    <!-- Global parameters -->
    <!-- ***************** -->

    <xacro:property name="PI" value="3.1415926535897931"/>

    <!-- If the gazebo_ros_race_car_model should publish the ground truth tf -->
    <xacro:arg name="publish_tf" default="false"/>
    <!-- If the perception stack should be simulated or if sensors should be used -->
    <xacro:arg name="simulate_perception" default="true"/>

    <!-- ***************** -->
    <!-- Imported elements -->
    <!-- ***************** -->

    <!--  Import the wheels  -->
    <xacro:include filename="$(find eufs_racecar)/urdf/wheels.urdf.xacro"/>

    <!-- Import EUFS base element with the chassis -->
    <xacro:include filename="$(find eufs_racecar)/urdf/eufs_base.urdf.xacro"/>

    <!-- Import all available sensors -->
    <xacro:include filename="$(find eufs_sensors)/urdf/all_sensors.urdf.xacro" />

    <!--  Include the plugins  -->
    <xacro:include filename="$(find eufs_plugins)/urdf/eufs_plugins.gazebo.xacro"/>

    <!-- *************** -->
    <!-- Robots Elements -->
    <!-- *************** -->

    <!-- Chassis of the car -->
    <xacro:eufs_base chassis_mesh="file://$(find eufs_racecar)/meshes/ads-dv.dae"/>

    <!-- Wheels -->
    <xacro:wheels chassis_width="0.98" wheelbase="1.530" />

    <!-- Placa -->
    <xacro:plate prefix="plate" parent="base_footprint">
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </xacro:plate>

    <!-- Sensores -->
    <xacro:sensor_imu parent="plate_plate" prefix="imu">
        <origin xyz="1 1 1" rpy="0 0 0"/>
    </xacro:sensor_imu>

    <xacro:sensor_gps parent="plate_plate" prefix="gps">
        <origin xyz="0.0 0.0 0.4" rpy="0 0 0"/>
    </xacro:sensor_gps>

    <xacro:VLP-16R parent="plate_plate" name="velodyne" topic="/velodyne_points" hz="10" samples="800" active="$(arg simulate_perception)">
        <origin xyz="0.59 0.0 0.51" rpy="0 ${10*PI/180.0} 0"/>
    </xacro:VLP-16R>

    <xacro:zed_camera parent="plate_plate" prefix="zed" active="$(arg simulate_perception)">
        <origin xyz="0.12 0.0 0.76" rpy="0 ${10.15*PI/180.0} 0"/>
    </xacro:zed_camera>

</robot>
